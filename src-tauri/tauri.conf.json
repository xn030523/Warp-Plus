{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Warp Plus",
  "version": "1.3.0",
  "identifier": "com.warpplus.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Warp Plus",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "opener:default",
            {
              "identifier": "opener:allow-open-url",
              "allow": [
                {
                  "url": "warp://**"
                },
                {
                  "url": "https://zf.bugka.xyz/**"
                },
                {
                  "url": "https://**"
                },
                {
                  "url": "http://**"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
